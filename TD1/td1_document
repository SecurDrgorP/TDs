Exercice 10:

#include <iostream>
using namespace std;

int main() {
  int n;
  cout << "Entrez un entier n : ";
  cin >> n;

  int u1 = 1;
  int u2 = 1;
  int un = 0;

  if (n == 1 || n == 2) {
    un = 1;
  } else {
    for (int i = 3; i <= n; i++) {
      un = u1 + u2;
      u1 = u2;
      u2 = un;
    }
  }

  cout << "La nième valeur de la suite de Fibonacci est : " << un << endl;

  return 0;
}


======================
Exercice 11:

#include <iostream>
using namespace std;

int main() {
  int num;
  cout << "Combien de lignes ? ";
  cin >> num;

  for (int i = 1; i <= num; i++) {
    for (int j = 1; j <= num - i; j++) {
      cout << " ";
    }
    for (int j = 1; j <= 2 * i - 1; j++) {
      cout << "*";
    }
    cout << endl;
  }

  return 0;
}

======================
Exercice 12:


#include <iostream>
#include <iomanip>
using namespace std;

int main() {
  for (int i = 1; i <= 10; i++) {
    for (int j = 1; j <= 10; j++) {
      cout << setw(3) << i * j << " ";
    }
    cout << endl;
  }

  return 0;
}

